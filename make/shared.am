# vim: set syntax=automake:

AM_CFLAGS = \
	-std=c99 \
	-pedantic \
	-Wall \
	-Wextra \
	-I$(top_builddir)/include \
	-I$(top_srcdir)/include \
	-D_POSIX_C_SOURCE=200809L

if WITH_LIBC
AM_CFLAGS += \
	-I$(top_builddir)/libc/include \
	-I$(top_srcdir)/libc/include
endif

if ENABLE_WERROR
AM_CFLAGS += -Werror
endif
